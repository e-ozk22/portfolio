{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "app", // これで `@/` を `app/` に解決
    "paths": {
      "@/*": ["*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "frontend/.next/types/**/*.ts",
    "next-env.d.ts",
    "src/**/*",
    "app/types/**/*.d.ts",
    ".next/types/**/*.ts",
    "app",
    "lib"
  ],
  "exclude": ["node_modules"]
}
